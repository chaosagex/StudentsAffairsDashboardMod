@model IEnumerable<StudentsAffairsDashboard.Models.StudentClothe>


<div>
    <p>Total <br> <b id="total">@Html.Display("Total")</b> EGP</p>
</div>


<div class="card card-widget widget-user-2 shadow-sm">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header bg-warning">
        <div class="widget-user-image">
            <img class="img-circle elevation-2" src="~/Logos/@(Session["CurrentSchool"].ToString()+".jpeg")" alt="User Avatar">
        </div>
        <!-- /.widget-user-image -->
        <h3 class="widget-user-username">@Html.Display("StdName")</h3>
        <h5 class="widget-user-desc">NES @Html.Display("StdSchool") - @Html.Display("StdGrade") - @Html.Display("StdClass")</h5>
    </div>
    <div class="card-footer p-0">
        <ul class="nav flex-column">
            @foreach (var item in Model)
            {
                <li class="nav-item">
                        @Html.DisplayFor(modelItem => item.Cloth.ClothesName) <span class="text-center badge bg-primary">@item.Quantity</span> <span class="float-right badge bg-primary">@item.ReceivingQuantity.Trim()</span>
                </li>




            }
        </ul>
    </div>
</div>

