@model IEnumerable<StudentsAffairsDashboard.Models.StudentClothe>

<div class="card card-widget widget-user-2 shadow-sm">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header bg-gradient-blue">
        <div class="widget-user-image">
            <img class="img-circle elevation-2" src="~/Logos/@(Session["CurrentSchool"].ToString()+".png")" alt="User Avatar">
        </div>
        <!-- /.widget-user-image -->
        <h3 class="widget-user-username">@Html.Display("StdName")</h3>
        <h5 class="widget-user-desc">NES @Html.Display("StdSchool") - @Html.Display("StdGrade") - @Html.Display("StdClass")</h5>
    </div>
    <div class="card-footer p-0">
        <ul class="nav flex-column">
            <li class="nav-item">
                <div class="row">
                    <div class="col-4">
                        <h6>Uniform Clothes</h6>
                    </div>
                    <div class="col-4">
                        <h3> <span class="text-center badge bg-primary">All Quantity</span> </h3>
                    </div>
                    <div class="col-4">
                        <h3><span class="float-right badge bg-primary">Receiving Quantity</span></h3>
                    </div>
                </div>
            </li>
            @foreach (var item in Model)
            {
                <li class="nav-item">
                    <div class="row">
                        <div class="col-4">
                            <h6>@Html.DisplayFor(modelItem => item.Cloth.ClothesName) </h6>
                        </div>
                        <div class="col-4">
                            <h3> <span class="text-center badge bg-primary">@item.Quantity</span> </h3>
                        </div>
                        <div class="col-4">
                            <h3><span class="float-right badge bg-primary">@item.ReceivingQuantity.Trim()</span></h3>
                        </div>
                    </div>
                </li>
            }
        </ul> 
    </div>
</div>


<div>
    <p>Total <br> <b id="total">@Html.Display("Total")</b> EGP</p>
</div>