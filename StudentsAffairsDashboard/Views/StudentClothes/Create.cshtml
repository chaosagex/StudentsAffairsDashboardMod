                            }
                            @if (@Html.Display("StdGradeID").ToString().Equals("301") || @Html.Display("StdGradeID").ToString().Equals("302") || @Html.Display("StdGradeID").ToString().Equals("303"))
                            {
                                foreach (var item in Model)
                                {
                                    if (item.ClothesID == 15 || item.ClothesID == 16 || item.ClothesID == 17
                                        || item.ClothesID == 18 || item.ClothesID == 19 || item.ClothesID == 20)
                                    {
                                        <tr>
