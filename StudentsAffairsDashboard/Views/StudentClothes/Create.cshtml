            });
            
            $("#Grade16Boy").change(function () {
                if ($('#Grade16Boy').is(":checked")) {
                    
                    $("#KG12Boy").prop("checked", false)
                    $('#Grade16Boy').prop("checked", true)
                    $('#Grade79Boy').prop("checked", false)
                    $('#Grade1012Boy').prop("checked", false)

                    $("#KG12Girl").prop("checked", false)
                    $('#Grade16Girl').prop("checked", false)
                    $('#Grade79Girl').prop("checked", false)
                    $('#Grade1012Girl').prop("checked", false)

                    total = total + parseFloat($('#P_Grade16Boy').val())
                    $('#total').text(total)
                    PackageName = "PrimaryBoyGirl";
                    PackageValue = $('#P_Grade16Boy').val();
                }
            });

            $("#Grade16Girl").change(function () {
                if ($('#Grade16Girl').is(":checked")) {

                    $("#KG12Boy").prop("checked", false)
                    $('#Grade16Boy').prop("checked", false)
                    $('#Grade79Boy').prop("checked", false)
                    $('#Grade1012Boy').prop("checked", false)

                    $("#KG12Girl").prop("checked", false)
                    $('#Grade16Girl').prop("checked", true)
                    $('#Grade79Girl').prop("checked", false)
                    $('#Grade1012Girl').prop("checked", false)

                    total = total + parseFloat($('#P_Grade16Girl').val())
                    $('#total').text(total)
