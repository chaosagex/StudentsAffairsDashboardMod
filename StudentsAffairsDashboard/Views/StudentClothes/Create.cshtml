                    total = total + parseFloat($('#P_Grade79Girl').val())
                    $('#total').text(total)
                    PackageName = "PreparatoryBoyGirl";
                    PackageValue = $('#P_Grade79Girl').val();
                }
            });

            $("#Grade1012Boy").change(function () {
                if ($('#Grade1012Boy').is(":checked")) {
                    
                    $("#KG12Boy").prop("checked", false)
                    $('#Grade16Boy').prop("checked", false)
                    $('#Grade79Boy').prop("checked", false)
                    $('#Grade1012Boy').prop("checked", true)

                    $("#KG12Girl").prop("checked", false)
