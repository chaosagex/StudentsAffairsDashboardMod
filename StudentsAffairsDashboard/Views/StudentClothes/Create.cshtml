                                                <div class="col-md-9 text-left mt-sm-2">
                                                    <div class="custom-control custom-checkbox pb-3">
                                                        <input type="checkbox" id="CheckBox_@Html.DisplayFor(modelItem => item.ClothesID)" class="custom-control-input c-items">
                                                        <label class="custom-control-label" for="CheckBox_@Html.DisplayFor(modelItem => item.ClothesID)"></label>
