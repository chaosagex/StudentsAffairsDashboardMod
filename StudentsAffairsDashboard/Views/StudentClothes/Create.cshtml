                    <div class="float-right text-right">
                        <p class="h2">Total <br> <b id="total"></b> EGP</p>
                    </div>
                </div>
            </div>
            <div class="row mt-4 d-flex align-items-center">
                <div class="col-sm-6 order-md-2 text-right">
                    <input type="submit" value="Complete" id="btnsubmit" class="btn btn-primary mb-4 pl-5 pr-5" />
                </div>
                <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                    <a href="catalog.html">
                        <i class="fas fa-arrow-left mr-2"></i> @Html.ActionLink("Back to List", "Index", "StudentClothes")
