@model IEnumerable<StudentsAffairsDashboard.Models.Cloth>

@{
    ViewBag.Title = "Create";
}

<section>
    <div class="container">
        <div class="col-lg-12">
            <div class="card card-primary">
                <div class="form-horizontal">
                    <div class="card-header">
                        <h3 class="card-title">Student Data</h3>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="row">
                            <input type="hidden" id="StdCode" value="@Html.Display("StdCode")">
                            <div class="custom-control custom-checkbox pb-3 col-6">
                                <h4><b>Full Name : @Html.Display("StdName")</b></h4>
                            </div>
                            <div class="custom-control custom-checkbox pb-3 col-2">
                                <h4><b>@Html.Display("StdSchool")</b></h4>
                            </div>
                            <div class="custom-control custom-checkbox pb-3 col-2">
                                <h4><b>@Html.Display("StdGrade")</b></h4>
                            </div>
                            <div class="custom-control custom-checkbox pb-3 col-2">
                                <h4><b>@Html.Display("StdClass")</b></h4>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <form id="Uniform">
            <div class="row w-100">
                <div class="col-lg-12 col-md-12 col-12">
                    <div class="row text-center">
                        <div class="custom-control custom-checkbox pb-3 col-3">
                            <input type="checkbox" id="KG12Boy" class="custom-control-input">
                            <label class="custom-control-label" for="KG12Boy"><b>KG 1-2 (Boy)</b></label>
                            <input type="hidden" id="P_KG12Boy" value="@Html.Display("P_KG12Boy")" />
                        </div>
                        <div class="custom-control custom-checkbox pb-3 col-3">
                            <input type="checkbox" id="Grade16Boy" class="custom-control-input">
                            <label class="custom-control-label" for="Grade16Boy"><b>Grade 1-6 (Boy)</b></label>
                            <input type="hidden" id="P_Grade16Boy" value="@Html.Display("P_Grade16Boy")" />
                        </div>
                        <div class="custom-control custom-checkbox pb-3 col-3">
                            <input type="checkbox" id="Grade79Boy" class="custom-control-input">
                            <label class="custom-control-label" for="Grade79Boy"><b>Grade 7-9 (Boy)</b></label>
                            <input type="hidden" id="P_Grade79Boy" value="@Html.Display("P_Grade79Boy")" />
                        </div>
                        <div class="custom-control custom-checkbox pb-3 col-3">
                            <input type="checkbox" id="Grade1012Boy" class="custom-control-input">
                            <label class="custom-control-label" for="Grade1012Boy"><b>Grade 10-12 (Boy)</b></label>
                            <input type="hidden" id="P_Grade1012Boy" value="@Html.Display("P_Grade1012Boy")" />
                        </div>

                        <div class="custom-control custom-checkbox pb-3 col-3">
                            <input type="checkbox" id="KG12Girl" class="custom-control-input">
                            <label class="custom-control-label" for="KG12Girl"><b>KG 1-2 (Girl)</b></label>
                            <input type="hidden" id="P_KG12Girl" value="@Html.Display("P_KG12Girl")" />
                        </div>
                        <div class="custom-control custom-checkbox pb-3 col-3">
                            <input type="checkbox" id="Grade16Girl" class="custom-control-input">
                            <label class="custom-control-label" for="Grade16Girl"><b>Grade 1-6 (Girl)</b></label>
                            <input type="hidden" id="P_Grade16Girl" value="@Html.Display("P_Grade16Girl")" />
                        </div>
                        <div class="custom-control custom-checkbox pb-3 col-3">
                            <input type="checkbox" id="Grade79Girl" class="custom-control-input">
                            <label class="custom-control-label" for="Grade79Girl"><b>Grade 7-9 (Girl)</b></label>
                            <input type="hidden" id="P_Grade79Girl" value="@Html.Display("P_Grade79Girl")" />
                        </div>
                        <div class="custom-control custom-checkbox pb-3 col-3">
                            <input type="checkbox" id="Grade1012Girl" class="custom-control-input">
                            <label class="custom-control-label" for="Grade1012Girl"><b>Grade 10-12 (Girl)</b></label>
                            <input type="hidden" id="P_Grade1012Girl" value="@Html.Display("P_Grade1012Girl")" />
                        </div>
                    </div>


                    <table id="shoppingCart" class="table table-condensed table-responsive">
                        <thead>
                            <tr>
                                <th style="width:5%"> #</th>
                                <th style="width:60%">Item</th>
                                <th style="width:20%">Price</th>
                                <th style="width:10%">Quantity</th>
                            </tr>
                        </thead>
                        <tbody id="data">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td data-th="Checks">
                                        <div class="col-md-9 text-left mt-sm-2">
                                            <div class="custom-control custom-checkbox pb-3">
                                                <input type="checkbox" id="CheckBox_@Html.DisplayFor(modelItem => item.ClothesID)" class="custom-control-input c-items">
                                                <label class="custom-control-label" for="CheckBox_@Html.DisplayFor(modelItem => item.ClothesID)"></label>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-th="Product">
                                        <div class="row">
                                            <div class="col-md-9 text-left mt-sm-2">
                                                <h4>@Html.DisplayFor(modelItem => item.ClothesName)</h4>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-th="Price">
                                        <div class="col-md-9 text-left mt-sm-2">
                                            <input type="hidden" id="Price_@item.ClothesID" value="@item.ClothesPrice">
                                            <h4><span id="Price_@Html.DisplayFor(modelItem => item.ClothesID)">@Html.DisplayFor(modelItem => item.ClothesPrice)</span> EGP</h4>
                                        </div>
                                    </td>
                                    <td data-th="Quantity">
                                        <input type="number" id="Quantity_@item.ClothesID" name="Quantity_@item.ClothesID"
                                               class="form-control form-control-lg text-center c-item" value="0" min="0" onchange="CalcTotal()">
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <div class="float-right text-right">
                        <p class="h2">Total <br> <b id="total"></b> EGP</p>
                    </div>
                </div>
            </div>
            <div class="row mt-4 d-flex align-items-center">
                <div class="col-sm-6 order-md-2 text-right">
                    <input type="submit" value="Complete" id="btnsubmit" class="btn btn-primary mb-4 pl-5 pr-5" />
                </div>
                <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                    <a href="catalog.html">
                        <i class="fas fa-arrow-left mr-2"></i> @Html.ActionLink("Back to List", "Index" , "StudentClothes")
                    </a>
                </div>
            </div>
        </form>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
                </script>
            }
        </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        var total = 0
        var PackageName = "";
        var PackageValue = "";
        $(document).ready(function () {
            $(".c-items").change(function () {
                CalcTotal2()
            })
            $("#KG12Boy").change(function () {
                if ($('#KG12Boy').is(":checked")) {                  

                    $("#KG12Boy").prop("checked", true)
                    $('#Grade16Boy').prop("checked", false)
                    $('#Grade79Boy').prop("checked", false)
                    $('#Grade1012Boy').prop("checked", false)

                    $("#KG12Girl").prop("checked", false)
                    $('#Grade16Girl').prop("checked", false)
                    $('#Grade79Girl').prop("checked", false)
                    $('#Grade1012Girl').prop("checked", false)

                    total = total + parseFloat($('#P_KG12Boy').val())
                    $('#total').text(total)
                    PackageName = "KGBoy";
                    PackageValue = $('#P_KG12Boy').val();
                }
            });

