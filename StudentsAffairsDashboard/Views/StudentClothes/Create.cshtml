                                                    <input type="hidden" id="Price_@item.ClothesID" value="@item.ClothesPrice">
                                                    <h4><span id="Price_@Html.DisplayFor(modelItem => item.ClothesID)">@Html.DisplayFor(modelItem => item.ClothesPrice)</span> EGP</h4>
                                                </div>
                                            </td>
                                            <td data-th="Quantity">
