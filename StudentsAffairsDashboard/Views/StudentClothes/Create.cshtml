                    total = total + parseFloat($('#P_Grade1012Boy').val())
                    $('#total').text(total)
                    PackageName = "SecondaryBoyGirl";
                    PackageValue = $('#P_Grade1012Boy').val();
                }
            });

            $("#Grade1012Girl").change(function () {
                if ($('#Grade1012Girl').is(":checked")) {
                    
                    $("#KG12Boy").prop("checked", false)
                    $('#Grade16Boy').prop("checked", false)
                    $('#Grade79Boy').prop("checked", false)
                    $('#Grade1012Boy').prop("checked", false)

                    $("#KG12Girl").prop("checked", false)
                    $('#Grade16Girl').prop("checked", false)
                    $('#Grade79Girl').prop("checked", false)
                    $('#Grade1012Girl').prop("checked", true)

                    total = total + parseFloat($('#P_Grade1012Girl').val())
                    $('#total').text(total)
                    PackageName = "SecondaryBoyGirl";
                    PackageValue = $('#P_Grade1012Girl').val();
                }
            });

        })

        function CalcTotal() {
            for (var i = 1; i < 30; i++) {
                if ($('#CheckBox_' + i).is(":checked")) {
                    total = total + parseFloat((parseInt($('#Price_' + i).val()) * parseInt($('#Quantity_' + i).val())))
                    console.log(total)
                }
            }
            $('#total').text(total)
        }

        function CalcTotal2() {
            for (var i = 1; i < 30; i++) {
                if ($('#CheckBox_' + i).is(":checked")) {
                    $('#Quantity_' + i).val(1)
                } else {
                    $('#Quantity_' + i).val(0)
                }
            }
            CalcTotal()
        }

            $("#btnsubmit").click(function (e) {
                //Serialize the form datas.   
                var valdata = $("#Uniform").serialize();
                var StdCode = $("#StdCode").val();
                //to get alert popup  
                e.preventDefault();
                $.ajax({
                    url: "/StudentClothes/UpdateItems",
                    type: "POST",
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    data: {
                        searchText: valdata,
                        Code: StdCode,
                        packageName : PackageName,
                        packageValue : PackageValue
                    },
                    success: function (response) {
                        window.location.href = "/StudentClothes/Index"
                    },
                    error: function (response) {
                        console.log(response.responseText);
                        alert(response.responseText);
                    }
                });
            });
    </script>
}
