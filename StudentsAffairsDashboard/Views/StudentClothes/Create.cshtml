                    $('#Grade79Girl').prop("checked", false)
                    $('#Grade1012Girl').prop("checked", true)

                    total = total + parseFloat($('#P_Grade1012Girl').val())
                    $('#total').text(total)
                    PackageName = "SecondaryBoyGirl";
                    PackageValue = $('#P_Grade1012Girl').val();
                }
            });

        })

        function CalcTotal() {
            for (var i = 1; i < 35; i++) {
                if ($('#CheckBox_' + i).is(":checked")) {
                    total = total + parseFloat((parseInt($('#Price_' + i).val()) * parseInt($('#Quantity_' + i).val())))
                    console.log(total)
                }
            }
            $('#total').text(total)
        }

        function CalcTotal2() {
            for (var i = 1; i < 35; i++) {
                if ($('#CheckBox_' + i).is(":checked")) {
                    $('#Quantity_' + i).val(1)
                } else {
                    $('#Quantity_' + i).val(0)
                }
            }
            CalcTotal()
        }

        $("#btnsubmit").click(function (e) {
            //Serialize the form datas.
            var valdata = $("#Uniform").serialize();
            var StdCode = $("#StdCode").val();
            //to get alert popup
            e.preventDefault();
            $.ajax({
                url: "/StudentClothes/UpdateItems",
                type: "POST",
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: {
                    searchText: valdata,
                    Code: StdCode,
                    packageName: PackageName
                },
                success: function (response) {
                    window.location.replace = "~/Reports/Report.aspx?student="+StdCode
                },
                error: function (response) {
                    console.log(response.responseText);
                    alert(response.responseText);
                }
            });
        });
    </script>
