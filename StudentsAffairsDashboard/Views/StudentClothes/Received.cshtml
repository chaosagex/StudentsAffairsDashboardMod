@model IEnumerable<StudentsAffairsDashboard.Models.StudentClothe>

@{
    ViewBag.Title = "Create";
}

<section>
    <div class="container">
        <div class="col-lg-12">
            <div class="card card-primary">
                <div class="form-horizontal">
                    <div class="card-header">
                        <h3 class="card-title">Student Data</h3>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="row">
                            <input type="hidden" id="StdCode" value="@Html.Display("StdCode")">
                            <div class="custom-control custom-checkbox pb-3 col-6">
                                <h6><b>Full Name : @Html.Display("StdName")</b></h6>
                            </div>
                            <div class="custom-control custom-checkbox pb-3 col-2">
                                <h6><b>@Html.Display("StdSchool")</b></h6>
                            </div>
                            <div class="custom-control custom-checkbox pb-3 col-2">
                                <h6><b>@Html.Display("StdGrade")</b></h6>
                            </div>
                            <div class="custom-control custom-checkbox pb-3 col-2">
                                <h6><b>@Html.Display("StdClass")</b></h6>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <form id="Uniform">
            <div class="row w-100">
                <div class="col-lg-12 col-md-12 col-12">
                    <table id="shoppingCart" class="table table-condensed table-responsive">
                        <thead>
                            <tr>
                                <th style="width:5%"> #</th>
                                <th style="width:60%">Item</th>
                                <th style="width:20%">Package Status</th>
                                <th style="width:10%">Quantity</th>
                                <th style="width:10%">Receiving Quantity</th>
                            </tr>
                        </thead>
                        <tbody id="data">

                            @foreach (var item in Model)
                            {

                                if (item.ReceivingStatus.Equals("False") && item.PackageStatus.Equals("InPackage"))
                                {
                                    <tr>
                                        <td data-th="Checks">
                                            <div class="col-md-9 text-left mt-sm-2">
                                                <div class="custom-control custom-checkbox pb-3">
                                                    <input disabled type="checkbox" id="@Html.DisplayFor(modelItem => item.SCID)" name="@Html.DisplayFor(modelItem => item.SCID)" class="custom-control-input c-items">
                                                    <label class="custom-control-label" for="@Html.DisplayFor(modelItem => item.SCID)"></label>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-th="Product">
                                            <div class="row">
                                                <div class="col-md-9 text-left mt-sm-2">
                                                    <h5>@Html.DisplayFor(modelItem => item.Cloth.ClothesName)</h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-th="PackageStatus">
                                            <div class="row">
                                                <div class="col-md-9 text-left mt-sm-2">
                                                    <h5>@Html.DisplayFor(modelItem => item.PackageStatus)</h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-th="Quantity">
                                            <input type="number" disabled id="Quantity_@item.SCID" name="Quantity_@item.SCID"
                                                   class="form-control form-control-lg text-center c-item" value="@item.Quantity" min="0">
                                        </td>
                                        <td data-th="REQuantity">
                                            <input type="number" required id="REQuantity_@item.SCID" name="REQuantity_@item.SCID"
                                                   class="form-control form-control-lg text-center c-item" value="@Int32.Parse(item.ReceivingQuantity)" min="0" max="@item.Quantity">
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
                <div class="col-lg-12 col-md-12 col-12">
                    <table id="shoppingCart" class="table table-condensed table-responsive">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="data">

                            @foreach (var item in Model)
                            {

                                if (item.ReceivingStatus.Equals("False") && item.PackageStatus.Equals("OutPackage"))
                                {
                                    <tr>
                                        <td data-th="Checks" style="width:5%">
                                            <div class="col-md-9 text-left mt-sm-2">
                                                <div class="custom-control custom-checkbox pb-3">
                                                    <input disabled type="checkbox" id="@Html.DisplayFor(modelItem => item.SCID)" name="@Html.DisplayFor(modelItem => item.SCID)" class="custom-control-input c-items">
                                                    <label class="custom-control-label" for="@Html.DisplayFor(modelItem => item.SCID)"></label>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-th="Product">
                                            <div class="row">
                                                <div class="col-md-9 text-left mt-sm-2">
                                                    <h5>@Html.DisplayFor(modelItem => item.Cloth.ClothesName)</h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-th="PackageStatus" style="width:10%">
                                            <div class="row">
                                                <div class="col-md-9 text-left mt-sm-2">
                                                    <h5>@Html.DisplayFor(modelItem => item.PackageStatus)</h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-th="Quantity" style="width:15%">
                                            <input type="number" disabled id="Quantity_@item.SCID" name="Quantity_@item.SCID"
                                                   class="form-control form-control-lg text-center c-item" value="@item.Quantity" min="0">
                                        </td>
                                        <td data-th="REQuantity" style="width:15%">
                                            <input type="number" required id="REQuantity_@item.SCID" name="REQuantity_@item.SCID"
                                                   class="form-control form-control-lg text-center c-item" value="@Int32.Parse(item.ReceivingQuantity)" min="0" max="@item.Quantity">
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
            </div>
            <div class="row mt-4 d-flex align-items-center">
                <div class="col-sm-6 order-md-2 text-right">
                    <input type="submit" value="Complete" id="btnsubmit" class="btn btn-primary mb-4 pl-5 pr-5" />
                </div>
                <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                    <a href="catalog.html">
                        <i class="fas fa-arrow-left mr-2"></i> @Html.ActionLink("Back to List", "Index")
                    </a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>


        $(document).ready(function () {
            $("#btnsubmit").click(function (e) {
                //Serialize the form datas.
                var valdata = $("#Uniform").serialize();
                var StdCode = $("#StdCode").val();
                $("#btnsubmit").prop("disabled",true);
                //to get alert popup
                e.preventDefault();
                $.ajax({
                    url: "StudentClothes/UpdateItemsReceived",
                    type: "POST",
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    data: {
                        searchText: valdata,
                        Code: StdCode
                    },
                    success: function (response) {
                        window.location.href = "StudentClothes/Receiving";
                    },
                    error: function (response) {
                        console.log(response.responseText);
                        alert(response.responseText);
                    }
                });
            });
        });
    </script>
}
