@model StudentsAffairsDashboard.Models.Class

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12">
        <div class="card card-primary">
            <div class="form-horizontal">
                <div class="card-header">
                    <h3 class="card-title">Add Class Main Data</h3>
                </div>
                <br />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="row px-3">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.ClassName, "Class Name", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add New Class" class="btn btn-primary" style="margin-top: 12px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        }
        <div class="col-6">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
