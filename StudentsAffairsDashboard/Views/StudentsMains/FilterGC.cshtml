@model IEnumerable<StudentsAffairsDashboard.Models.StudentsMain>

<div class="card card-primary">
    <div class="form-horizontal">
        <div class="card-header">
            <h3 class="card-title">Add Student Data</h3>
        </div>
        <br />
        <div class="form-group">
            <div class="row px-3"  style="height: 200px ; overflow-y : scroll" >
                @*<table id="example1" class="table table-bordered table-striped col-12">*@
                    <table class="col-12">
                        <thead>
                            <tr>
                                <th style="text-align: center; vertical-align: middle;">
                                    الرقم القومي
                                </th>
                                <th style="text-align: right; vertical-align: middle;">
                                    الاسم بالكامل
                                </th>
                                <th style="text-align: center; vertical-align: middle;">
                                    عرض
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align: center; vertical-align: middle;">
                                        @item.StdNID
                                    </td>
                                    <td style="height: 20px; text-align: right;">
                                        <h8>@item.StdArabicFristName @item.StdArabicMiddleName @item.StdArabicLastName @item.StdArabicFamilyName</h8>
                                    </td>
                                    <td style="text-align: center; vertical-align: middle;">
                                        <a href="#" id="ShowData" class="badge badge-primary" onclick="ConfirmEdit(@item.StdCode)">Show Data</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <thead>
                            <tr>
                                <th style="text-align: center; vertical-align: middle;">
                                    الرقم القومي
                                </th>
                                <th style="text-align: right; vertical-align: middle;">
                                    الاسم بالكامل
                                </th>
                                <th style="text-align: center; vertical-align: middle;">
                                    عرض
                                </th>
                            </tr>
                        </thead>
                    </table>

</div>
        </div>
    </div>
</div>
