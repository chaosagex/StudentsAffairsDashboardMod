@model StudentsAffairsDashboard.Models.StudentsMain
@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-lg-11">
        <div class="card card-primary">
            <div class="form-horizontal">
                <div class="card-header">
                    <h3 class="card-title">Add Student Main Data</h3>
                </div>
                <br />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="row px-3">
                        <div class="col-md-3">
                            @Html.Label("Student National ID", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.StdNID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.StdNID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.StdSchoolID, "Student School", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("StdSchoolID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StdSchoolID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.StdClassID, "Student Class", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("StdClassID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StdClassID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.StdNationality, "Student Nationality", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.StdNationality, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.StdNationality, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.StdStatus, "Student Status", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.StdStatus, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.StdStatus, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.StdJoinYear, "Student Join Year", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.StdJoinYear, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.StdJoinYear, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.StdStaffSon, "Student Staff Son", htmlAttributes: new { @class = "control-label" })
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.StdStaffSon, true)
                                <label class="form-check-label">Yes</label>
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.StdStaffSon, false)
                                <label class="form-check-label">No</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.StdLegalGuardianship, "Student Legal Guardianship", htmlAttributes: new { @class = "control-label" })
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.StdLegalGuardianship, "Father")
                                <label class="form-check-label">Father</label>
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.StdLegalGuardianship, "Mother")
                                <label class="form-check-label">Mother</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.StdParentsSeparated, "Parents Separated", htmlAttributes: new { @class = "control-label" })
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.StdParentsSeparated, true)
                                <label class="form-check-label">Yes</label>
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.StdParentsSeparated, false)
                                <label class="form-check-label">No</label>
                            </div>
                                
                        </div>
                        <div class="col-md-3">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Add New Student" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>

                            @*<div class="form-group">
                @Html.LabelFor(model => model.StdGradesID, "Student Grade", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("StdSchoolID", ViewBag.StdGradesID, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StdClassID, "", new { @class = "text-danger" })
                </div>
            </div>*@

                
            </div>

            </div>
        </div>
    </div>
}

<div class="col-6">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}